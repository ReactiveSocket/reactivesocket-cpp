cpp_library(
    name = 'reactivesocket-internal',

    header_namespace = 'src',
    headers = subdir_glob([
        ('src', '**/*.h')
    ]),
)

# A target, on which implementations of various pluggable strategies depend.
# Contains minimal amount of code needed to implement those strategies.
