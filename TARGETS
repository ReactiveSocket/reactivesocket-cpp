cpp_unittest(
    name = 'reactivesocket-tests',

    header_namespace = 'test',
    headers = subdir_glob([
        ('test', '**/*.h'),
    ]),
    srcs = glob([
        'test/*.cpp',
        'test/concurrent/*.cpp',
        'test/framed/*.cpp',
        'test/simple/*.cpp',
        ]),
    deps = [
        ':reactivesocket-internal',
        ':reactivesocket',
        ':reactivesocket-plugins',
        ':reactivesocket-streams-mocks',
        '//folly/io/async:util',
    ],
    compiler_flags=['-DREACTIVE_SOCKET_EXTERNAL_STACK_TRACE_UTILS'],
)

